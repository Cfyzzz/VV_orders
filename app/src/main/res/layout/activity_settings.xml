<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsActivity"
    android:id="@+id/settings_layout"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connectline_strings"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/url_api"
        android:id="@+id/connect_line_settings"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_settings"/>

        <EditText
            android:id="@+id/login_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="your login"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_settings"/>

        <EditText
            android:id="@+id/passwrd_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="secret password"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/send_settings_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status_settings"
        android:hint="any message"/>

    <Button
        android:id="@+id/update_clients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/utdate_clients_button_settings"/>

    <Button
        android:id="@+id/update_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_products_button_settings" />

</LinearLayout>